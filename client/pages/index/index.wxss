/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.search {
    width: 90vw;
    margin: 10px;
    height: 30px;
    align-items: center;
    border-radius: 20px;
    flex-direction: row;
    display: inline-flex;
    justify-content: space-around;
    background-color: rgb(235, 236, 236);
}

.container-list {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: rgb(235, 236, 236);
}

.container-list .list {
    width: 100vw;
    height: 66px;
    align-items: center;
    flex-direction: row;
    display: inline-flex;
    justify-content: space-between;
    background-color: #fff;
    margin-bottom: 5px;
    padding: 10px;
    box-sizing: border-box;
}
.container-list .list image{
    height: 60px;
    width: 60px;
    border-radius: 10px;
    flex: 0 0 60px;
}
